<Window x:Class="ToDo.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDo.WPF"
        xmlns:components="clr-namespace:ToDo.WPF.Components"
        mc:Ignorable="d"
        Title="ToDo Application" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <components:AddToDo x:Name="AddToDo" Grid.Column="0"/>
        <components:ToDoList x:Name="ToDoList" Grid.Column="1" />
    </Grid>
</Window>
