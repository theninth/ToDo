<UserControl x:Class="ToDo.WPF.Components.AddToDo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             d:DataContext="{d:DesignInstance Type=vms:AddToDoViewModel}"
             xmlns:local="clr-namespace:ToDo.WPF.Components"
             xmlns:vms="clr-namespace:ToDo.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="TbxToDo" Grid.Row="0" Text="{Binding ToDo, UpdateSourceTrigger=PropertyChanged}" />
        <Button Grid.Row="1" Command="{Binding AddCommand}">Add</Button>
    </Grid>
</UserControl>
